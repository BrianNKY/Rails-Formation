<h1> Nouvelle catégorie </h1>

<hr>


<%= form_for @category do |f| %>

<div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Nom' %>
</div>
<div class="form-group">
    <%= f.text_field :slug, class: 'form-control', placeholder: 'Url' %>
</div>
<div class="form-group">
    <button type="submit" class="btn btn-primary"> Créer une nouvelle catégorie </button>
</div>

<% end %>